<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainPage"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/detailviewitemProfileImage"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="7.5dp"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <TextView
            android:text="User name"
            android:textColor="@color/white"
            android:id="@+id/detailviewitemProfileTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/detailviewitemImageViewContent"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>
    <LinearLayout
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black">
        <ImageView
            android:id="@+id/detailviewitemFavoriteImageView"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/heart_icon" />
        <ImageView
            android:id="@+id/detailviewitemCommentImageView"
            android:src="@drawable/ic_chat_black"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="7dp"/>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/detailviewitemFavoriteCounterTextView"
        android:text="Like 0"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/detailviewitemExplainTextView"
        android:text="Explain content"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/mainPage_division"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </LinearLayout>
</LinearLayout>